<body class="text-center">

  <form class="form-signin" action="/users/login" method="POST">
    <img class="mb-4" src="images/uno.png" alt="" width="300" height="300">

    <div class="mid">

      <input type="username" name="username" class="form-control bottom" placeholder="username" required>
      <input type="password" name="password" class="form-control bottom" placeholder="password" required>

      <button type="submit" class="btn btn-lg btn-primary btn-block">SIGN IN</button>
    </form>

      <div class="links">
        <div class="link1">
          <a href="/registration" class="forgot">Forgot password?</a>
        </div>
        <div class="link2">
          <a href="/registration" class="create">Create An Account</a>
        </div>
      </div>
  </div>
</body>

